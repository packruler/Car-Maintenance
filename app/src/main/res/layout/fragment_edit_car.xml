<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.MainActivity"
            android:padding="@dimen/abc_action_bar_content_inset_material">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:id="@+id/vehicle_image_card"
            android:layout_alignParentRight="true"
            card_view:cardElevation="@dimen/cardview_default_elevation"
            card_view:contentPadding="@dimen/abc_button_padding_horizontal_material"
            card_view:cardCornerRadius="@dimen/cardview_default_radius"
            android:layout_above="@+id/make_card"
            android:layout_alignTop="@+id/name_card">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/vehicle_image_layout"
                >

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:id="@+id/vehicle_image"
                    android:scaleType="centerCrop"
                    android:background="@android:color/darker_gray"
                    />

                <RelativeLayout
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:id="@+id/loading_image_display"
                    android:visibility="visible"
                    android:layout_alignLeft="@+id/vehicle_image"
                    android:layout_alignRight="@+id/vehicle_image"
                    android:layout_alignBottom="@+id/vehicle_image"
                    android:layout_alignTop="@+id/vehicle_image">

                    <ProgressBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:indeterminate="true"
                        style="@android:style/Widget.ProgressBar"
                        android:layout_centerInParent="true"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/abc_dropdownitem_icon_width"
                    android:layout_below="@id/vehicle_image"
                    android:layout_alignLeft="@id/vehicle_image">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/display_color"
                        android:id="@+id/display_color_title"
                        android:textAppearance="?android:attr/textAppearanceMedium"/>

                    <ImageView
                        android:layout_width="@dimen/abc_dropdownitem_icon_width"
                        android:layout_height="@dimen/abc_dropdownitem_icon_width"
                        android:id="@+id/display_color_display"
                        android:background="@color/material_green_500"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>
            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/abc_action_bar_default_padding_material"
            card_view:cardElevation="@dimen/cardview_default_elevation"
            android:id="@+id/name_card"
            android:layout_toLeftOf="@+id/vehicle_image_card"
            card_view:contentPadding="@dimen/abc_action_bar_default_padding_material"
            card_view:cardCornerRadius="@dimen/cardview_default_radius">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/name"
                    android:id="@+id/name_textView"
                    android:gravity="center_vertical"
                    style="@android:style/TextAppearance.DeviceDefault.Large"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/name_display"
                    android:text="@string/click_to_set"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_marginLeft="@dimen/abc_action_bar_default_padding_material"
                    android:layout_below="@+id/name_textView"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/abc_action_bar_default_padding_material"
            card_view:cardElevation="@dimen/cardview_default_elevation"
            android:id="@+id/vin_card"
            android:layout_below="@+id/name_card"
            android:layout_toLeftOf="@+id/vehicle_image_card"
            card_view:contentPadding="@dimen/abc_action_bar_default_padding_material"
            card_view:cardCornerRadius="@dimen/cardview_default_radius">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/vin_textView"
                    android:text="@string/vin"
                    style="@style/Base.TextAppearance.AppCompat.Large"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/click_to_set"
                    android:id="@+id/vin_display"
                    android:layout_below="@+id/vin_textView"
                    android:layout_marginLeft="@dimen/abc_action_bar_default_padding_material"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Decode VIN"
                    android:id="@+id/decode_button"
                    android:visibility="gone"
                    android:layout_below="@+id/vin_textView"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/abc_action_bar_default_padding_material"
            card_view:cardElevation="@dimen/cardview_default_elevation"
            android:id="@+id/year_card"
            android:layout_below="@+id/vin_card"
            android:layout_toLeftOf="@+id/vehicle_image_card"
            card_view:contentPadding="@dimen/abc_action_bar_default_padding_material"
            card_view:cardCornerRadius="@dimen/cardview_default_radius">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/year"
                    android:id="@+id/year_textView"
                    style="@style/Base.TextAppearance.AppCompat.Large"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/click_to_set"
                    android:id="@+id/year_display"
                    android:layout_below="@+id/year_textView"
                    android:layout_marginLeft="@dimen/abc_action_bar_default_padding_material"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/abc_action_bar_default_padding_material"
            card_view:cardElevation="@dimen/cardview_default_elevation"
            android:id="@+id/make_card"
            android:layout_below="@+id/year_card"
            card_view:contentPadding="@dimen/abc_action_bar_default_padding_material"
            card_view:cardCornerRadius="@dimen/cardview_default_radius">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/make"
                    android:id="@+id/make_textView"
                    android:gravity="center_vertical"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/click_to_set"
                    android:id="@+id/make_display"
                    android:layout_marginLeft="@dimen/abc_action_bar_default_padding_material"
                    android:layout_below="@+id/make_textView"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/abc_action_bar_default_padding_material"
            card_view:cardElevation="@dimen/cardview_default_elevation"
            android:id="@+id/model_card"
            android:layout_below="@+id/make_card"
            card_view:contentPadding="@dimen/abc_action_bar_default_padding_material"
            card_view:cardCornerRadius="@dimen/cardview_default_radius">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/model"
                    android:id="@+id/model_textView"
                    android:gravity="center_vertical"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/click_to_set"
                    android:id="@+id/model_display"
                    android:layout_marginLeft="@dimen/abc_action_bar_default_padding_material"
                    android:layout_below="@+id/model_textView"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/abc_action_bar_default_padding_material"
            card_view:cardElevation="@dimen/cardview_default_elevation"
            android:id="@+id/submodel_card"
            android:layout_below="@+id/model_card"
            card_view:contentPadding="@dimen/abc_action_bar_default_padding_material"
            card_view:cardCornerRadius="@dimen/cardview_default_radius">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/submodel"
                    android:id="@+id/submodel_textView"
                    android:gravity="center_vertical"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/click_to_set"
                    android:id="@+id/submodel_display"
                    android:layout_below="@+id/submodel_textView"
                    android:layout_marginLeft="@dimen/abc_action_bar_default_padding_material"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/abc_action_bar_default_padding_material"
            card_view:cardElevation="@dimen/cardview_default_elevation"
            android:id="@+id/mileage_card"
            android:layout_below="@+id/submodel_card"
            card_view:contentPadding="@dimen/abc_action_bar_default_padding_material"
            card_view:cardCornerRadius="@dimen/cardview_default_radius">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/mileage"
                    android:id="@+id/mileage_textView"
                    android:gravity="center_vertical"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/mileage_display"
                    android:text="@string/click_to_set"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_marginLeft="@dimen/abc_action_bar_default_padding_material"
                    android:layout_below="@+id/mileage_textView"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/abc_action_bar_default_padding_material"
            android:layout_marginBottom="@dimen/abc_action_bar_default_padding_material"
            card_view:cardElevation="@dimen/cardview_default_elevation"
            android:id="@+id/purchase_cost_card"
            android:layout_below="@+id/mileage_card"
            card_view:contentPadding="@dimen/abc_action_bar_default_padding_material"
            card_view:cardCornerRadius="@dimen/cardview_default_radius">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/purchase_cost"
                    android:id="@+id/purchase_cost_textView"
                    android:gravity="center_vertical"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/purchase_cost_display"
                    android:text="@string/click_to_set"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_marginLeft="@dimen/abc_action_bar_default_padding_material"
                    android:layout_below="@+id/purchase_cost_textView"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/abc_action_bar_default_padding_material"
            card_view:cardElevation="@dimen/cardview_default_elevation"
            android:id="@+id/purchase_date_card"
            android:layout_below="@+id/purchase_cost_card"
            card_view:contentPadding="@dimen/abc_action_bar_default_padding_material"
            card_view:cardCornerRadius="@dimen/cardview_default_radius"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/purchase_date"
                    android:id="@+id/purchase_date_textView"
                    android:gravity="center_vertical"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/purchase_date_display"
                    android:text="@string/click_to_set"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_marginLeft="@dimen/abc_action_bar_default_padding_material"
                    android:layout_below="@+id/purchase_date_textView"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/save_discard_view"
            android:layout_below="@+id/purchase_date_card">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/save"
                android:id="@+id/save_changes"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/discard"
                android:layout_alignParentRight="true"
                android:id="@+id/discard_changes"/>
        </RelativeLayout>

    </RelativeLayout>

</ScrollView>
