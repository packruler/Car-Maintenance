<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.packruler.carmaintenance.ui.EditService">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_small">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardElevation="@dimen/cardview_default_elevation"
            card_view:cardCornerRadius="@dimen/cardview_default_radius"
            card_view:contentPadding="@dimen/margin_tiny"
            android:id="@+id/general_info"
            android:layout_marginBottom="@dimen/margin_tiny">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:tag="@string/container_layout">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/general_info"
                    android:textAppearance="@android:style/TextAppearance.Small"
                    android:id="@+id/general_info_title"
                    android:textStyle="bold"
                    android:textColor="?attr/colorPrimary"
                    android:layout_marginBottom="@dimen/margin_small"/>

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:hint="@string/mileage"
                    android:ems="10"
                    android:id="@id/current_mileage"
                    android:layout_below="@id/general_info_title"/>

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:id="@+id/dateDisplay"
                    android:hint="@string/date"
                    android:layout_below="@id/current_mileage"/>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/dateDisplay"
                    android:layout_alignBottom="@id/dateDisplay"
                    android:layout_alignLeft="@id/dateDisplay"
                    android:layout_alignRight="@id/dateDisplay"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cost"
                    android:textAppearance="@android:style/TextAppearance.Small"
                    android:id="@+id/cost_title"
                    android:textStyle="bold"
                    android:textColor="?attr/colorPrimary"
                    android:layout_marginBottom="@dimen/margin_small"
                    android:layout_marginTop="@dimen/margin_small"
                    android:layout_below="@id/dateDisplay"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/cost_title">

                    <NumberPicker
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/number1"/>

                    <NumberPicker
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/decimal"
                        android:layout_toRightOf="@id/number1"/>

                    <NumberPicker
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/number2"
                        android:layout_toRightOf="@id/decimal"/>

                    <NumberPicker
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/number3"
                        android:layout_toRightOf="@id/number2"/>

                    <NumberPicker
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/number4"
                        android:layout_toRightOf="@id/number3"/>
                </RelativeLayout>

            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>
</ScrollView>
