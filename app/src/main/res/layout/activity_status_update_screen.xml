<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".StatusUpdateScreen">

    <android.support.v7.widget.Toolbar
        android:id="@+id/update_toolbar"
        style="@style/Theme.AppCompat.Light.DarkActionBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/update_toolbar"
        tools:context=".StatusUpdateScreen">

        <android.support.v4.view.PagerTabStrip
            android:id="@+id/update_tab_strip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"/>

    </android.support.v4.view.ViewPager>

    <fragment
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:name="com.packruler.carmaintenance.EditCarFragment"
        android:id="@+id/new_car_fragment"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        tools:layout="@layout/preference_fragment_layout"
        android:layout_below="@+id/update_toolbar"/>

</RelativeLayout>
